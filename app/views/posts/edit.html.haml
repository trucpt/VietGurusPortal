            .actions
              %a.btn.btn-circle.btn-icon-only.btn-default{:href => "javascript:;"}
                %i.icon-cloud-upload
              %a.btn.btn-circle.btn-icon-only.btn-default{:href => "javascript:;"}
                %i.icon-wrench
              %a.btn.btn-circle.btn-icon-only.btn-default{:href => "javascript:;"}
